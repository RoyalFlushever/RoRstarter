<% provide(:title, 'Sign up')%> 

<div class="signin signup">
  <div class="form-signin my-auto">
    <div class="text-center social-login mb-4">
      <a class="btn btn-facebook mb-2" href="#">
        <span class="fa fa-facebook mr-2"></span> Sign Up with facebook
      </a>
      <a class="btn btn-google mb-3 mb-md-4" href="#">
        <span class="fa fa-google-plus mr-2"></span> Sign Up with Google
      </a>
      <p class="over">OR</p>
    </div>
    <%= form_for(@user, url: signup_path) do |f|  %>
      <%= render 'shared/error_messages' %>
      <div class="form-label-group">
        <%= f.text_field :name, placeholder: "Name", id: "inputName", class: "form-control", required: true, autofocus: true %>   
        <%= f.label :name %> 
      </div>

      <div class="form-label-group">
        <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email address", required: true %>
        <%= f.label :email %>
      </div>

      <div class="form-label-group">
        <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "Password", required: true %>
        <%= f.label :password %> 
      </div>

      <div class="form-label-group">
        <%= f.password_field :password_confirmation, id: "confirmPassword", class: "form-control", placeholder: "Confirm Password", required: true %>
        <%= f.label :password_confirmation, "Confirmation" %> 
      </div>
      
      <%= f.submit "Create my account", class: "btn btn-lg btn-primary btn-block" %>  
    <% end %>
  </div>
</div>
